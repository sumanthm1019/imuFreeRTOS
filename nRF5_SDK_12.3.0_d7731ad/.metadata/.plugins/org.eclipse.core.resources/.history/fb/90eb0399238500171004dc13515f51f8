#ifndef DRIVERS_LL_ADF001_H_
#define DRIVERS_LL_ADF001_H_

// i2c Slave device addresses
#define ACCEL_DEV_ADDR 	0x19
#define MAG_DEV_ADDR	0x1E
#define GYRO_DEV_ADDR	0x35

#define GYRO_WHOAMI_VAL		0xD4

// Gyro Register Map

#define GYRO_WHOAMI_REG		0x0F
#define GYRO_CTRL1_REG		0x20
#define GYRO_CTRL2_REG		0x21
#define GYRO_CTRL3_REG		0x22
#define GYRO_CTRL4_REG		0x23
#define GYRO_CTRL5_REG		0x24
#define GYRO_REFERENCE_REG	0x25
#define GYRO_OUT_TEMP_REG	0x26
#define GYRO_STATUS_REG		0x27
#define GYRO_OUT_X_L		0x28
#define GYRO_OUT_X_H		0x29
#define GYRO_OUT_Y_L		0x2A
#define GYRO_OUT_Y_H		0x2B
#define GYRO_OUT_Z_L		0x2C
#define GYRO_OUT_Z_H		0x2D
#define GYRO_INT1_CFG_REG	0x30
#define GYRO_INT1_SRC_REG	0x31
#define GYRO_INT1_DUR_REG	0x38




uint16_t adf001_init(void);


#endif /* DRIVERS_LL_ADF001_H_ */
